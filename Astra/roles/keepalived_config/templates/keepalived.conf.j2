# roles/keepalived_config/templates/keepalived.conf.j2
vrrp_instance {{ keepalived_instance_name }} {
  state BACKUP
  interface {{ keepalived_interface }}
  virtual_router_id {{ keepalived_vrid }}
  priority 100
  advert_int 1
  nopreempt
  authentication {
    auth_type AH
    auth_pass {{ keepalived_auth_pass }}
  }
  virtual_ipaddress {
    {{ keepalived_vip }}
  }
}
